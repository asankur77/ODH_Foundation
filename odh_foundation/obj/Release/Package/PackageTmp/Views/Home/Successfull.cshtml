@{
    ViewBag.Title = "Successfull";
}

<div class="container text-center">
    <div class="row">
        @if (ViewBag.online_transaction_msg[1] == "success")
        {
            <h1>Payment recevied successfull!</h1>
        }
        else
        {
            <h1>Payment Failed!</h1>
        }
        <div class="col-md-5"></div>
        <div class="col-md-7">
            @if (ViewBag.online_transaction_msg[1] == "success")
            {
                <img class="img-responsive xs-pull-center" src="~/Content/check.gif" style="width:20%" />
            }
            else
            {
                <img class="img-responsive xs-pull-center" src="~/Content/failed.png" style="width:20%" />
            }
        </div>
    </div>
    <div class="row">
        <div class="card">
            <h2> Online Transaction Result </h2>
            <strong>Status :</strong>   @ViewBag.online_transaction_msg[2] <br />
            <strong> Transaction Reference Number:</strong>  @ViewBag.online_transaction_msg[3] <br />
            <a class="btn btn-primary" href="/Home/PrintInvoice?txnid=@ViewBag.online_transaction_msg[3]" target="_blank">Print receipt</a>
            <a class="btn btn-success" href="/Home/PrintCertificate?txnid=@ViewBag.online_transaction_msg[3]" target="_blank">Print Certificate</a>
        </div>
    </div>
</div>



