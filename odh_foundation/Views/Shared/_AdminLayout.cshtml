@if (TempData["Submit"] != null) { 
    <script type="text/javascript">
        var msgTxt = '@TempData["Submit"].ToString()';
        setTimeout(function () {
            msgTxt = msgTxt.replace("&#39;", "");
            alert(msgTxt);
        }, 100);
    </script>
    TempData["Submit"] = null;
