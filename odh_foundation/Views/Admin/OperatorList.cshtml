@model IEnumerable<odh_foundation.Models.Operator>
@using odh_foundation.Models;
@{
    UsersContext db = new UsersContext();
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Operator List";
    var a = 0;
}
<script src="~/Scripts/print.js" type="text/javascript"></script>
<div class="page-content">
      <div style="margin-left:25px;">
       
           <br />
          <br /> 
       @*  <a href="@Url.Action("PrintOperatorList")" target="_blank">Get Report In PDF</a>*@
          

      </div>
                <div class="container" id="divid">
                  
<div class="page-toolbar" >
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Operator List</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                               <div class="page-toolbar-block pull-right">
                        
                        </div>    
                              
<table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:98%">
   
    @foreach (var item in Model)
    {
        if (a == 0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="OperatorId"><b>Operator Id</b></label>
            </th>

          <th style="width:10%;text-align:center;">
           <label ><b>Password</b></label>
        </th>
        <th style="width:10%;text-align:center;">
           <label id="OperatorName"><b>Operator Name</b></label>
        </th>
            
       @* <th style="width:10%;text-align:center;">
           <label id="BranchCode"><b>@mr.branchname Code</b></label>
        </th>*@
            
        <th style="width:10%;text-align:center;">
            <label id="OperatorMobile" ><b>Operator Mobile</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="OperatorAddress"><b>Operator Address</b></label>
        </th>
       <th style="width:10%;text-align:center;">
           <label id="Operator_Mail"><b>Operator Mail</b></label>
        </th>
        <th style="width:10%;text-align:center;">
           <label id="Cdate"><b>Creation date</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OperatorId)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.OperatorPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OperatorName)
        </td>
        
       @* <td>
            @Html.DisplayFor(modelItem => item.BranchCode)
        </td>*@
       
        <td>
            @Html.DisplayFor(modelItem => item.OperatorMobile)
        </td>
         
        <td>
            @Html.DisplayFor(modelItem => item.OperatorAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Operator_Mail)
        </td>
         <td>
              @Convert.ToDateTime(item.Cdate).ToString("dd/MM/yyyy")
            
        </td>
    </tr>
    } 

</table>
                    </div> 


                   

      
                    </div>


    </div>

