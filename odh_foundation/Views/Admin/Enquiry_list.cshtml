@using odh_foundation.Models;
@{
    ViewBag.Title = "Enquiry List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    UsersContext db = new UsersContext();
    var enqry = db.Contacts.Where(e => e.status == 1).ToList();
    int a = 1;
}


<div class="page-content">
    <div style="margin-left: 25px;">


    </div>
    <div class="container" id="divid">


        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">All Enquiry List</div>
                
            </div>


        </div>



        <table border="1" style="margin-left: 1%; margin-right: 1px; margin-bottom: 30px; width: 98%;">


            <tr>
                <th style="width: 5%; text-align: center;">
                    <label id="sn"><b>S.N.</b></label>
                </th>
                <th style="width: 10%; text-align: center;">
                    <label id="BranchCode"><b>Name</b></label>
                </th>
                <th style="width: 10%; text-align: center;">
                    <label><b>Email ID</b></label>
                </th>
                <th style="width: 10%; text-align: center;">
                    <label id="BranchName"><b>Mobile</b></label>
                </th>

                <th style="width: 10%; text-align: center;">
                    <label id="BranchDistrict"><b>Subject</b></label>
                </th>

                <th style="width: 10%; text-align: center;">
                    <label id="branchaddress"><b>Message</b></label>
                </th>


                <th style="width: 10%; text-align: center;">
                    <label id="mobile"><b>Date</b></label>
                </th>
            </tr>



            @foreach (var n in enqry)
            {
                <tr style="text-align: center;">
                    <td>
                        @a
                    </td>
                    <td>
                        @n.name
                    </td>
                    <td>
                        @n.emailid
                    </td>
                    <td>
                        @n.mobile
                    </td>

                    <td>
                        @n.subject
                    </td>

                    <td>
                        @n.message
                    </td>

                    <td>
                        @Convert.ToDateTime(n.cdate).ToString("dd/MM/yyyy")
                    </td>

                </tr>
                a = a + 1;
            }

        </table>

    </div>




    </div>


</div>

